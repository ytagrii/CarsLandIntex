                <select asp-for="@Model.crash.MOTORCYCLE_INVOLVED">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
            <div class="col-4 form-group">
                <label>Was a  improper_restraint Involved?</label>
                <select asp-for="@Model.crash.IMPROPER_RESTRAINT">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
            <div class="col-4 form-group">
                <label>Was a unrestrained Involved?</label>
                <select asp-for="@Model.crash.UNRESTRAINED">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
            <div class="col-4 form-group">
                <label>Was a dui Involved?</label>
                <select asp-for="@Model.crash.DUI">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
            <div class="col-4 form-group">
                <label>Was a intersection_related Involved?</label>
                <select asp-for="@Model.crash.INTERSECTION_RELATED">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
            <div class="col-4 form-group">
                <label>Was a overturn_rollover Involved?</label>
                <select asp-for="@Model.crash.OVERTURN_ROLLOVER">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
            <div class="col-4 form-group">
                <label>Was a older_driver_involved Involved?</label>
                <select asp-for="@Model.crash.OLDER_DRIVER_INVOLVED">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
            <div class="col-4 form-group">
                <label>Was a single_vehicle Involved?</label>
                <select asp-for="@Model.crash.SINGLE_VEHICLE">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
            <div class="col-4 form-group">
                <label>Was a distracted_driving Involved?</label>
                <select asp-for="@Model.crash.DISTRACTED_DRIVING">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
            <div class="col-4 form-group">
                <label>Was a drowsy_driving Involved?</label>
                <select asp-for="@Model.crash.DROWSY_DRIVING">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
            <div class="col-4 form-group">
                <label>Was a roadway departure Involved?</label>
                <select asp-for="@Model.crash.ROADWAY_DEPARTURE">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
            <div class="col-4 form-group">
                <label>Was a work zone Invloved?</label>
                <select asp-for="@Model.crash.WORK_ZONE_RELATED">
                    <option value="0">No</option>
