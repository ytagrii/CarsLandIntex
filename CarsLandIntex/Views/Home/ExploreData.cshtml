@{
    ViewData["Title"] = "Explore Data";
}
@model ExploreDataInfo
<!-- Wrapper -->
<div id="" >
    <div class="row">
        <div class="col-2">
            <h4>Filters</h4>
            <br />
            <form class="form" method="get">
                <div class="form-group">
                    <lablel>County</lablel>
                    <select>
                        <option></option>
                        @foreach (County county in Model.County)
                        {
                            <option value="@county">@county.COUNTY_NAME</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>City</label>
                    <input list="cities" type="text" />
                    <datalist id="cities">
                        @foreach (City city in Model.Cities)
                        {
                            <option value="@city.CITY"></option>
                        }
                    </datalist>
                </div>
                <div class="form-group">
                    <label>Date Range</label>
                    <label>Start Date</label>
                    <input type="date" />
                    <br />
                    <label>End Date</label>
                    <input type="date" />
                </div>
                <div class="form-group">
                    <label>Crash Severity</label>
                    <select>
                        <option></option>
                        @foreach (Severity sev in Model.Severity)
                        {
                            <option value="@sev">@sev.DESCRIPTION</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm ">Filter</button>
                </div>
            </form>
            
            
        </div>
        <div class="col">
            <h4>Crash Data</h4>
            <br />
            <table class=" table-bordered ">
                <thead>
                    <tr>
                        <td>Date</td>
                        <td>Route</td>
                        <td>Milepoint</td>
                        <td>Crash Severity</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Crash c in Model.Crashes)
                    {
                        <tr>
                            <td>@c.CRASH_DATETIME</td>
                            <td>@c.ROUTE</td>
                            <td>@c.MILEPOINT</td>
                            <td>@c.Severity.DESCRIPTION</td>
                        </tr>
                       
                    }
                </tbody>
            </table>
            
        </div>
    </div>
</div>


